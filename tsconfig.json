{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es2021",
    "lib": ["esnext"],
    "rootDir": ".",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
