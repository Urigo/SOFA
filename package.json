{
  "name": "sofa-api",
  "description": "Create REST APIs with GraphQL",
  "version": "0.5.1",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "keywords": [
    "api",
    "rest",
    "graphql",
    "sofa"
  ],
  "repository": {
    "type": "git",
    "url": "Urigo/sofa"
  },
  "author": {
    "name": "Uri Goldshtein",
    "email": "uri.goldshtein@gmail.com",
    "url": "https://github.com/Urigo"
  },
  "peerDependencies": {
    "express": "^4.0.0",
    "graphql": "^0.13.2 || ^14.0.0"
  },
  "dependencies": {
    "change-case": "3.1.0",
    "graphql-subscriptions": "1.1.0",
    "iterall": "1.2.2",
    "request": "2.88.0",
    "request-promise-native": "1.0.7",
    "uuid": "3.3.3",
    "winston": "3.2.1",
    "yamljs": "0.3.0"
  },
  "scripts": {
    "start": "ts-node example/index.ts",
    "prod": "webpack && node dist/bundle.js",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --forceExit && yarn bundlesize",
    "format": "prettier --write **/*.{ts,js,md,json}",
    "prebuild": "rm -rf dist/",
    "prepublishOnly": "yarn build",
    "bundlesize": "yarn build && cd bundle-test/ && yarn && yarn test"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.1",
    "@types/express": "4.17.1",
    "@types/express-graphql": "0.8.2",
    "@types/graphql": "14.2.3",
    "@types/jest": "24.0.20",
    "@types/request-promise-native": "1.0.17",
    "@types/supertest": "2.0.8",
    "@types/swagger-ui-express": "3.0.1",
    "@types/uuid": "3.4.5",
    "@types/webpack": "4.39.5",
    "@types/yamljs": "0.2.30",
    "body-parser": "1.19.0",
    "chalk": "2.4.2",
    "express": "4.17.1",
    "express-graphql": "0.9.0",
    "graphql": "14.5.8",
    "graphql-tag": "2.10.1",
    "graphql-tools": "4.0.6",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "supertest": "4.0.2",
    "swagger-ui-express": "4.1.2",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.4.1",
    "typescript": "3.6.4",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
