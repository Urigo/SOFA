{
  "name": "sofa-api",
  "description": "Create REST APIs with GraphQL",
  "version": "0.11.0",
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "license": "MIT",
  "keywords": [
    "api",
    "rest",
    "graphql",
    "sofa"
  ],
  "repository": {
    "type": "git",
    "url": "Urigo/sofa"
  },
  "author": {
    "name": "Uri Goldshtein",
    "email": "uri.goldshtein@gmail.com",
    "url": "https://github.com/Urigo"
  },
  "peerDependencies": {
    "graphql": "^0.13.2 || ^14.0.0 || ^15.0.0"
  },
  "dependencies": {
    "@graphql-tools/utils": "8.2.4",
    "@types/js-yaml": "4.0.3",
    "ansi-colors": "4.1.1",
    "axios": "0.22.0",
    "js-yaml": "4.1.0",
    "param-case": "3.0.4",
    "title-case": "3.0.3",
    "trouter": "3.2.0",
    "tslib": "2.3.1",
    "uuid": "8.3.2"
  },
  "scripts": {
    "start": "ts-node --project tsconfig.example.json example/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "bob build --single",
    "test": "jest --no-watchman",
    "prepare-release": "yarn build && yarn test",
    "release": "yarn prepare-release && bob prepack && npm publish dist",
    "ci:release:canary": "node bump.js && bob prepack && npm publish dist --tag alpha --access public"
  },
  "devDependencies": {
    "@graphql-tools/schema": "8.2.0",
    "@types/body-parser": "1.19.1",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "14.17.21",
    "@types/request-promise-native": "1.0.18",
    "@types/supertest": "2.0.11",
    "@types/swagger-ui-express": "4.1.3",
    "@types/trouter": "3.1.0",
    "@types/uuid": "8.3.1",
    "@types/yamljs": "0.2.31",
    "bob-the-bundler": "1.5.1",
    "body-parser": "1.19.0",
    "bundlesize": "0.18.1",
    "chalk": "4.1.2",
    "express": "4.17.1",
    "express-graphql": "0.12.0",
    "graphql": "15.6.1",
    "graphql-subscriptions": "1.2.1",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "lint-staged": "11.1.2",
    "prettier": "2.4.1",
    "supertest": "6.1.6",
    "swagger-ui-express": "4.1.6",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/index.mjs",
      "maxSize": "36 kB",
      "compression": "none"
    }
  ]
}
