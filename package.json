{
  "name": "sofa-api",
  "description": "Create REST APIs with GraphQL",
  "version": "0.6.0",
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "license": "MIT",
  "keywords": [
    "api",
    "rest",
    "graphql",
    "sofa"
  ],
  "repository": {
    "type": "git",
    "url": "Urigo/sofa"
  },
  "author": {
    "name": "Uri Goldshtein",
    "email": "uri.goldshtein@gmail.com",
    "url": "https://github.com/Urigo"
  },
  "peerDependencies": {
    "express": "^4.0.0",
    "graphql": "^0.13.2 || ^14.0.0"
  },
  "dependencies": {
    "axios": "0.19.2",
    "change-case": "4.1.1",
    "graphql-subscriptions": "1.1.0",
    "iterall": "1.3.0",
    "title-case": "3.0.2",
    "tslib": "1.10.0",
    "uuid": "3.4.0",
    "winston": "3.2.1",
    "yamljs": "0.3.0"
  },
  "scripts": {
    "start": "ts-node --project tsconfig.example.json example/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "bob",
    "test": "jest --no-watchman",
    "prepare-release": "yarn build && yarn test",
    "release": "yarn prepare-release && bob-update-version && npm publish dist",
    "ci:release:canary": "node bump.js && bob-update-version && npm publish dist --tag alpha --access public"
  },
  "devDependencies": {
    "@ardatan/bob": "0.2.7",
    "@types/body-parser": "1.19.0",
    "@types/express": "4.17.1",
    "@types/jest": "25.1.2",
    "@types/node": "12.12.27",
    "@types/request-promise-native": "1.0.17",
    "@types/supertest": "2.0.8",
    "@types/swagger-ui-express": "4.1.1",
    "@types/uuid": "3.4.7",
    "@types/yamljs": "0.2.30",
    "body-parser": "1.19.0",
    "bundlesize": "0.18.0",
    "chalk": "3.0.0",
    "express": "4.17.1",
    "express-graphql": "0.9.0",
    "graphql": "14.6.0",
    "graphql-tools": "4.0.6",
    "husky": "4.2.2",
    "jest": "25.1.0",
    "lint-staged": "10.0.7",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "swagger-ui-express": "4.1.3",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/index.esm.js",
      "maxSize": "36 kB",
      "compression": "none"
    }
  ]
}
