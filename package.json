{
  "name": "sofa-api",
  "description": "Create REST APIs with GraphQL",
  "version": "0.16.3",
  "buildOptions": {
    "input": "./src/index.ts"
  },
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "license": "MIT",
  "keywords": [
    "api",
    "rest",
    "graphql",
    "sofa"
  ],
  "repository": {
    "type": "git",
    "url": "Urigo/sofa"
  },
  "author": {
    "name": "Uri Goldshtein",
    "email": "uri.goldshtein@gmail.com",
    "url": "https://github.com/Urigo"
  },
  "peerDependencies": {
    "graphql": "^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "@graphql-tools/utils": "^9.2.0",
    "@whatwg-node/fetch": "^0.8.0",
    "@whatwg-node/router": "^0.3.0",
    "ansi-colors": "^4.1.3",
    "openapi-types": "^12.1.0",
    "param-case": "^3.0.4",
    "title-case": "^3.0.3",
    "tslib": "^2.5.0"
  },
  "scripts": {
    "start": "ts-node --project tsconfig.example.json example/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "bob build --single",
    "test": "jest --no-watchman",
    "release": "yarn build && changeset publish",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@babel/core": "7.21.3",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.21.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.4.4",
    "@types/node": "18.15.3",
    "@types/swagger-ui-dist": "3.30.1",
    "@types/yamljs": "0.2.31",
    "babel-jest": "29.5.0",
    "bob-the-bundler": "1.7.3",
    "bundlesize": "0.18.1",
    "chalk": "^4",
    "graphql": "16.6.0",
    "graphql-scalars": "1.20.4",
    "graphql-yoga": "3.7.3",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "lint-staged": "13.2.0",
    "prettier": "2.8.4",
    "swagger-ui-dist": "4.18.1",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "bundlesize": [
    {
      "path": "./dist/index.mjs",
      "maxSize": "36 kB",
      "compression": "none"
    }
  ]
}
